<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="video_converter.MainWindow"
        Title="Video Converter" Width="500" Height="540">
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Folder z plikami wideo:"/>
    <Button x:Name="SelectFolderButton" Content="Wybierz folder..."/>
    <TextBlock Text="Plik wideo:"/>
    <ComboBox x:Name="FileComboBox"/>
    <TextBlock Text="Docelowy format:"/>
    <ComboBox x:Name="FormatComboBox">
      <ComboBoxItem Content="mp4"/>
      <ComboBoxItem Content="mov"/>
      <ComboBoxItem Content="avi"/>
      <ComboBoxItem Content="mkv"/>
      <ComboBoxItem Content="webm"/>
    </ComboBox>
    <TextBlock Text="Nowa nazwa pliku (opcjonalne):"/>
    <TextBox x:Name="OutputNameTextBox" HorizontalAlignment="Left" Width="250"/>
    <Button x:Name="ConvertButton" Content="Konwertuj"/>
    <TextBlock x:Name="StatusText" Foreground="DarkGreen"/>
  </StackPanel>
</Window>
